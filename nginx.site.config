server {
    listen 80; 
    server_name local.development.me;

    access_log /home/www/nginx/development.me.access.log;
    error_log /home/www/nginx/development.me.error.log;

    root /home/www/project/path;

    index main.php;

    location ~ \.(img|png|jpeg|jpg|webm|webp|gif|zip|mp3|wav)$ {
        try_files /static/$uri /static/$uri/ 404;
    }   

    location ~ \.(js|css|map)$ {
        try_files /frontend/$uri /frontend/$uri/ 404;
    }   

    location ~ [^/]\.php(/|$) {
        # Split $uri to $fastcgi_script_name and $fastcgi_path_info.
        fastcgi_split_path_info ^(.+?\.php)(/.*)$;

        # Ensure that the requested PHP script exists before passing it
        # to the PHP-FPM.
        try_files $fastcgi_script_name =404;

        # Environment variables for PHP.
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $request_filename;

        fastcgi_index main.php;

        fastcgi_keep_conn on; 
        fastcgi_read_timeout 60s;
        fastcgi_send_timeout 60s;

        # Uncomment these in case of long loading or 502/504 errors.
        fastcgi_buffer_size 256k;
        fastcgi_buffers 256 16k;
        fastcgi_busy_buffers_size 256k;

        # [EDIT] Connection to PHP-FPM unix domain socket.
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
    }   

}
