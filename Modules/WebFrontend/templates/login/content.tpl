<div class="login-form">
    <div class="login-form-fields">
        <input type="text" class="login-form-input" data-entity="login" placeholder="Enter your login here">
        <input type="password" class="login-form-input" data-entity="password" placeholder="Enter your password here">
    </div>
    <div class="login-form-button">
        <button class="login-form-button__item" data-entity="login">Sign In</button>
        <button class="login-form-button__item" data-entity="register">Sign Up</button>

        <div class="simple-spinner"></div>
    </div>
</div>
